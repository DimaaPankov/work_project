<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.test.luckydrum.view.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_betFragment"
            app:destination="@id/betFragment" />
        <action
            android:id="@+id/action_firstFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
    </fragment>
    <fragment
        android:id="@+id/betFragment"
        android:name="com.test.luckydrum.view.BetFragment"
        android:label="fragment_bet"
        tools:layout="@layout/fragment_bet" >
        <action
            android:id="@+id/action_betFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.test.luckydrum.view.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_infoFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
    </fragment>
</navigation>