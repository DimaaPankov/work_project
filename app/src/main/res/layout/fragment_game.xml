<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/motion_scene"
    app:layoutDescription="@xml/fragment_game_scene"
    tools:context=".GameFragment">

    <ImageView
        android:id="@+id/background"
        android:layout_width="6000dp"
        android:layout_height="2000dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kosmos"
        tools:ignore="ContentDescription"></ImageView>



    <ImageView
        android:id="@+id/moon"
        android:layout_width="120dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/astranavt"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/TVbalans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BALANS : 1000"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        ></TextView>


    <TextView
        android:id="@+id/TVbet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="BET : 10"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/Bplay"
        android:layout_width="81dp"
        android:layout_height="67dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/play"
       />


    <!-- Added a hint that flies out and fades after the user swipes to the right -->

</androidx.constraintlayout.motion.widget.MotionLayout>