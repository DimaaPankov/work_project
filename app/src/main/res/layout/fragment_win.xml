<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaf4db"

    android:id="@+id/motion_scene"
    tools:context=".GameFragment">




    <ImageView
        android:id="@+id/moon"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toTopOf="@+id/Bplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVbalans"
        app:srcCompat="@drawable/astranavt"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/TVbalans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="BALANS : 1000"
        android:textColor="@color/white"
        android:textSize="40sp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background"></TextView>


    <TextView
        android:id="@+id/TVbet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="BET : 10"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/IVstop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/stop_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background">
    </ImageView>

    <ImageView
        android:id="@+id/Bplay"
        android:layout_width="81dp"
        android:layout_height="67dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/play"
        app:layout_constraintBottom_toTopOf="@+id/TVbet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>