<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="5dp"
    android:background="#212121"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    tools:context=".opkjhoij">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#252525"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/domiconText"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="BET"
            android:textColor="#E1BEE7"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/domInput"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        android:stretchColumns="*">


        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="#E1BEE7"
                android:text="1"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="#E1BEE7"
                android:text="2"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="#E1BEE7"
                android:text="3"
                android:textSize="20sp" />


        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="#E1BEE7"
                android:text="4"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="#E1BEE7"
                android:text="5"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="#E1BEE7"
                android:text="6"
                android:textSize="20sp" />


        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="#E1BEE7"
                android:text="7"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="#E1BEE7"
                android:text="8"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="#E1BEE7"
                android:text="9"
                android:textSize="20sp" />


        </TableRow>

        <TableRow>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_0"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:backgroundTint="#E1BEE7"
                android:text="0"
                android:textSize="20sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/domButton_equals"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="#FFC107"
                android:text="bet"
                android:textColor="#546E7A"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>

</androidx.appcompat.widget.LinearLayoutCompat>