<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    android:background="#EDF2EF"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewFalse1"
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:visibility="invisible"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/btn_one"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_one" />

    <View
        android:id="@+id/viewFalse3"
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:background="@color/red"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/viewTrue3"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewTrue3" />

    <View
        android:id="@+id/viewFalse2"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:visibility="invisible"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/btn_one"
        app:layout_constraintEnd_toEndOf="@+id/btn_two"
        app:layout_constraintStart_toStartOf="@+id/btn_two"
        app:layout_constraintTop_toTopOf="@+id/btn_one"
/>

    <View
        android:id="@+id/viewFalse4"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:visibility="invisible"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/btn_foure"
        app:layout_constraintEnd_toEndOf="@+id/btn_two"
        app:layout_constraintStart_toStartOf="@+id/btn_two"
        app:layout_constraintTop_toTopOf="@+id/btn_foure" />

    <View
        android:id="@+id/viewTrue1"
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:visibility="invisible"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="@+id/btn_one"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_one" />

    <View
        android:id="@+id/viewTrue3"
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:background="@color/teal_200"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_three"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_three" />

    <View
        android:id="@+id/viewTrue2"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:visibility="invisible"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="@+id/btn_one"
        app:layout_constraintEnd_toEndOf="@+id/btn_two"
        app:layout_constraintStart_toStartOf="@+id/btn_two"
        app:layout_constraintTop_toTopOf="@+id/btn_one" />

    <View
        android:id="@+id/viewTrue4"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:background="@color/teal_200"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_foure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/btn_foure" />

    <Button
        android:id="@+id/btn_foure"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="сет"
        android:backgroundTint="#57C4E5"

        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/btn_two" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="стрит флэш"
        android:backgroundTint="#57C4E5"

        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_one" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_qestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    </FrameLayout>

    <Button
        android:id="@+id/btn_one"
        android:backgroundTint="#57C4E5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:text="роял флеш"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTRUE" />

    <Button
        android:id="@+id/btn_two"
        android:backgroundTint="#57C4E5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:text="стрит"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textViewTRUE" />

    <TextView
        android:id="@+id/tv_qestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="#212738"
        android:text="как называется комбинация карт на фото?"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/textViewTRUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRUE"
        android:gravity="center"
        android:visibility="invisible"
        android:textColor="#F3F1F1"
        android:textSize="90sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFALSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FALSE"
        android:textColor="#F3F1F1"
        android:textSize="90sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintGuide_begin="205dp" />
</androidx.constraintlayout.widget.ConstraintLayout>